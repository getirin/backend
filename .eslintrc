{
  "extends": ["standard"],
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "keyword-spacing": ["error", {
      "overrides": {
        "if": { "after": false },
        "for": { "after": false },
        "while": { "after": false }
      }
    }],
    "space-before-blocks": ["error", "never"],
    "yield-star-spacing": ["error", "after"],
    "semi": ["error", "always"],
    "no-extra-semi": "error"
  }
}
